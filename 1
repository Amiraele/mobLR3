class Picture(val name:String, val author:String, val material:String, val country:String,
              val year:Int, val height:Int, val width:Int){

    fun era(){
        if (year>1300 && year<1500){
            println("$name - Эпоха Возрождения (Ренессанс)")
        }
        if (year>1500 && year<1800){
            println("$name - Классицизм")
        }
        if (year>1874 && year<1920){
            println("$name - Импрессионизм")
        }
        if (year>1921 && year<2022){
            println("$name - Сюрреализм")
        }
    }
    fun opisanie(){
        println("Картину '$name' написал художник $author в $year году. Страна - $country. Материал, выбранный автором - $material. " +
                "Высота картины $height см, ширина $width см.")
    }
    fun size_metr(){
        if (height>=100){
            print("Высота картины '$name' ${height/100} м ${height%100} см, ")
        }
        if (width>=100){
            println("ширина ${width/100} м ${width%100} см")
        }
    }
    fun gallery(){
        val a: ArrayList<String> = arrayListOf("Коронация Наполеона", "Мона Лиза")
        for (i in a){
            if (name==i){
                println("Картина '$name' находится в Лувре")
            }
        }
        val b: ArrayList<String> = arrayListOf("Мадонна Литта", "Танец")
        for (i in b){
            if (name==i){
                println("Картина '$name' находится в Эрмитаже")
            }
        }
    }
    fun info_author() {
        if (author == "Леонардо да Винчи") {
            println("Леонардо да Винчи - величайший живописец, скульптор и архитектор эпохи Возрождения; итальянский" +
                    " художник, ученый, музыкант и писатель. О нем часто говорят «человек, который хотел знать всё», \n" +
                    "так как он был всесторонне образован и развит. Да Винчи родился 15 апреля 1452 года в с. Анкиано " +
                    "неподалеку от Флоренции." +
                    "У Леонардо не было своей фамилии, так как он был внебрачным ребенком. \nВ переводе «да Винчи» означает " +
                    "просто то, что он был родом из окрестностей города Винчи. " +
                    "\nС малых лет его воспитывал отец, надеясь, " +
                    "что тот пойдет по его стопам и станет юристом. Однако общественная сфера не казалась Леонардо интересной. " +
                    "\nКогда в 1469 году отец перебрался во Флоренцию, он устроился подмастерьем к талантливому живописцу " +
                    "Андреа дель Верроккио. Юный художник испытывал интерес к различным наукам. \nОн интересовался одновременно " +
                    "и астрономией, и архитектурой, и физикой. " +
                    "Первую картину художника " +
                    "биографы датируют 1473 годом. Через несколько лет он уже имел собственную мастерскую и создавал шедевр за " +
                    "шедевром.\n")
        }
        if (author == "Жак Луи Давид") {
            println("Жак Луи Давид родился 30 августа 1748 года в семье богатого коммерсанта.Мальчик рано остался без отца, его воспитывала мама. " +
                    "Увлекшись рисованием, он поступает в 1766 году в престижное заведение – \nАкадемию искусства и живописи. " +
                    "Благодаря своему преподавателю, мастеру античного искусства, Жозефу Мари Вьен, Давид в период 1775-1780 годов " +
                    "занимается детальным изучением античности.\nОн увлекся в Академии мастерами Эпохи Возрождения и в его творениях это заметно" +
                    "В 1784 году Жак Луи стал членом Академии живописи и с этого года начинается его успешная карьера художника. " +
                    "\nЕго давняя мечта осуществилась – Давид начинает выставлять свои картины и у него появляются первые поклонники.\n")
        }
    }

}

fun main(){
    var p1 = Picture("Мона Лиза", "Леонардо да Винчи", "масло","Италия",1519,76,53)
    var p2 = Picture("Коронация Наполеона", "Жак Луи Давид", "масло", "Франция",1808, 621, 979)
    var p3 = Picture("Мадонна Литта","Леонардо да Винчи","темпера","Италия", 1491, 41, 32)
    var p4 = Picture("Танец", "Анри Эмиль Бенуа Матисс", "масло", "Франция",1910, 260, 391)

    p1.era()
    p2.opisanie()
    p3.gallery()
    p4.size_metr()
    p1.info_author()
    p2.info_author()

}
